					<a
						class="btn-link text-slate-700"
						tabindex="0"
					>
						Work
					</a>
					<a
						class="btn-link text-slate-700"
						tabindex="0"
					>
						Case Studies
					</a>
					<a
						class="btn-link text-slate-700"
						tabindex="0"
					>
						Blog
					</a>
					<a
						class="btn bg-slate-700 text-white"
						tabindex="0"
					>
						Contact Me
					</a>
				</section>
			</nav>
			{ children... }
