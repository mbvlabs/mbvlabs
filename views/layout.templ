					<a class="text-lg md:text-xl" href={ templ.SafeURL(routes.HomePage.URL()) }>
						<span class="font-semibold text-sm">mbv</span>
						<br/>
						<span class="font-bold text-xl">labs.</span>
					</a>
				</section>
				<section
					id="demo-dropdown-menu"
					class="md:hidden dropdown-menu"
				>
					<button
						type="button"
						id="demo-dropdown-menu-trigger"
						aria-haspopup="menu"
						aria-controls="demo-dropdown-menu-menu"
						aria-expanded="false"
						class="btn-outline"
						aria-label="Navigation menu"
