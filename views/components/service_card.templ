package components

// ServiceCard displays a service offering with icon, title, and description
templ ServiceCard(icon, title, description string) {
	<div class="group relative rounded-4xl bg-base-200 p-8 transition hover:bg-base-300">
		<div class="text-4xl mb-6">
			{ icon }
		</div>
		<h3 class="text-2xl font-semibold text-base-content mb-3">
			{ title }
		</h3>
		<p class="text-base leading-7 text-base-content/60">
			{ description }
		</p>
	</div>
}
