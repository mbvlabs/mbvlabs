package components

// StatBadge displays a metric with a large number and label
templ StatBadge(number, label string) {
	<div class="flex flex-col gap-y-3">
		<dt class="text-base leading-7 text-base-content/60">
			{ label }
		</dt>
		<dd class="text-4xl font-bold tracking-tight text-base-content sm:text-5xl">
			{ number }
		</dd>
	</div>
}
